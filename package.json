{
  "name": "@natsuneko-laboratory/vpmpackage",
  "version": "0.5.1",
  "description": "Operate VPMPackage from Node.js. No platform dependency. No additional instructions.",
  "main": "dist/index.cjs.cjs",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/natsuneko-laboratory/vpmpackage.git",
  "author": "Natsune Mochizuki <me@natsuneko.cat>",
  "license": "MIT",
  "type": "module",
  "private": false,
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.cjs"
    }
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc && npm run build:vite && npm run build:tsc",
    "build:vite": "vite build",
    "build:tsc": "rm -f tsconfig.types.tsbuildinfo && tsc --project ./tsconfig.types.json",
    "build:esm": "npx tsx node_modules/@natsuneko-laboratory/kiana/bin/esm-exports.ts --pattern **/{archive}.mjs --entrypoint dist/index.mjs",
    "prepare": "npm run build",
    "lint:eslint": "eslint --ext 'src/**/*.{ts,js}'",
    "lint:prettier": "prettier --check 'src/**/*.{ts,js}'",
    "fix:eslint": "eslint --fix 'src/**/*.{ts,js}'",
    "fix:prettier": "prettier --write 'src/**/*.{ts,js}'",
    "test": "vitest"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "fs-extra": "^11.3.3",
    "normalize-path": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@natsuneko-laboratory/kiana": "^1.1.0",
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "@types/normalize-path": "^3.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vitest": "^4.0.17"
  }
}
